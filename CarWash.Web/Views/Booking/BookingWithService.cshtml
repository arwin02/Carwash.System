@model CarWash.Web.ViewModels.bookings.BookingsViewModel
@{
    ViewData["Title"] = "BookingWithService";
}


<br /><br /><br />
<div class="container">
    <h1 class="well">Services</h1>
    <table class="table table-active table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Type</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Title</td>
                <td>@Model.Price.ToString("F")</td>
                <td>@Model.ServiceType</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
</div>
<br />  
<hr />
<div class="container">
    <h1 class="well">Booking reservation Form</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form >
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="col-sm-12">
                    <div class="row">
                        <input type="hidden" id="UserId" value="@Model.UserId" />
                        <input type="hidden" id="Title" name="Title" value="@Model.Title" />
                        <input type="hidden" id="ServiceType" name="ServiceType" value="@Model.ServiceType" />
                        <input type="hidden" id="Price" name="Price" value="@Model.Price" />
                        <input type="hidden" id="Description" name="Description" value="@Model.Description" />
                        <input type="hidden" id="serviceId" value="@Model.ServiceId" />

                        <div class="col-sm-6 form-group">
                            <label>User Name</label>
                            <input type="text" placeholder="Enter First Name Here.." id="username" value="@Model.UserName" class="form-control">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Phone Number</label>
                            <input type="text" placeholder="Enter Phone Number Here.." id="PhoneNumber" value="@Model.PhoneNumber" class="form-control">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Email Address</label>
                            <input type="text" placeholder="Enter Email Address Here.." id="email" value="@Model.Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="BookingAddress">Pick-up Address</label>
                            <input placeholder="Enter Pick up Address Here.." type="text" id="bookingAddress" class="form-control">
                        </div>
                        <div class="col-12">
                            <label for="Time" class="form-label">Time</label>
                            <input type="datetime-local" class="form-control" name="Time" id="time" required="">
                        </div>

                        @*<div class="form-group col-md-6 col-sm-6">
            <label for="arrival">Arrival Date</label>
            <input type="text" class="form-control input-sm datepicker" id="arrival" placeholder="">
        </div>*@
                    </div>
                    <br />
                    <button type="button"  id="autoSubmit" class="w-100 btn-lg btn-info">Book Service</button>
                    <hr />
                    <a href="~/booking/index" class="w-100 btn btn-danger btn-lg">&#8592;Cancel</a>
                </div>
            </form>
        </div>
      
    </div>
</div>

<script src="~/js/bookingPhase.js"></script>
