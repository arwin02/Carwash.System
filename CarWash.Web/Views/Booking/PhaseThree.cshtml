@model CarWash.Web.ViewModels.bookings.PhaseThreeViewModel
@using CarWash.Web.Infrastructures.Domain.Models
@{
    ViewData["Title"] = "PhaseThree";
}


<br /><br /><br />
<div class="section-title">
    <h2>Bookings</h2>
    <img src="~/img/cars.png" style="width:1100px; height:330px;" />
</div>
<div class="form-group">
    <img src="~/img/services/BookingSummary.png" />
</div>



@if (Model.Bookings != null)
{
   
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Item Price</th>
                    <th>Item Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
              
                    <tr>
                        <td>@Model.Bookings.Title</td>
                        <td>@Model.Bookings.Price.ToString("F")</td>
                        <td>@Model.Bookings.ServiceType</td>
                        <td>
                            @*<a href="#"><i class="fas fa-trash"></i></a>*@
                            <a href="#" onclick="confirmDelete('@Model.Bookings.Id','@Model.Bookings.Title','@Model.UserId', '@Model.ServiceId')" title="Delete Service"><button type="button" class="btn"><i class="fas fa-times"></i></button></a>

                        </td>
                    </tr>
                

            </tbody>
        </table>

    
}
<div class="container">
    <div class="row">
        <form>
            <label id="ErrorList"></label>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
            <input type="hidden" id="UserName" name="UserName" value="@Model.UserName" />
            <input type="hidden" id="ServiceId" value="@Model.ServiceId" />
            <h3>@Model.UserName</h3>
            <div class="form-group">
                <label class="form-label" for="PhoneNumber">Phone</label>
                <input class="form-control" id="Email" type="email" value="@Model.Email" placeholder="Phone Number" />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label class="form-label" for="PhoneNumber">Phone</label>
                        <input class="form-control" type="text" id="PhoneNumber" value="@Model.PhoneNumber" placeholder="Phone Number" width="50" height="50" />
                    </div>

                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label class="form-label" for="Time">Time</label>
                        <input class="form-control" id="Time" type="datetime-local" placeholder="Time" />
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label class="form-label" for="Address">Address</label>
                <input class="form-control" id="Address" type="text" placeholder="Address" />
            </div>
            <hr />
            <button type="button" id="submit" class="btn btn-primary">Submit</button>
        </form>


    </div>
</div>


<!--Delete Item=-->
<div class="modal" tabindex="-1" role="dialog" id="modal-delete-service">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span id="modal-delete-service-title"></span>?</p>
            </div>
            <div class="modal-footer">
                <a href="#" id="modal-delete-service-confirm"><button type="button" class="btn btn-primary">Delete Item</button></a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/bookingPhase.js"></script>