@model CarWash.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}




<div class="container mt-5">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Forgot Password</h1>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger text-center"></div>
                    <form action="/account/forgot-password" method="post">
                        @Html.AntiForgeryToken()
                        <div class="col-form-label">
                            <p class="text-center">Please check your email to change password your account</p>
                        </div>
                        <div class="form-group">
                            <label for="forgot-password">Forgot Password </label>
                            <input type="text" name="EmailAddress" class="form-control" id="emailaddress" aria-describedby="emailaddressHelp" placeholder="Enter Email">
                        </div>


                        <br />
                        <div class="col-md-12 text-center ">
                            <button type="submit" id="submit" value="ForgotPassword" class=" btn btn-block mybtn btn-primary tx-tfm">Submit</button>
                        </div>

                        @*<div class="col-md-12 mb-3">
            <p class="text-center">
                <a href="javascript:void();" class="google btn mybtn">
                    <i class="fa fa-google-plus">
                    </i> Signup using Google
                </a>
            </p>
        </div>*@

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#submit").attr('disabled', 'disabled');

        $("form").keyup(function () {
            // To Disable Submit Button
            $("#submit").attr('disabled', 'disabled');
            // Validating Fields
            var emailaddress = $("#emailaddress").val();


            if (!(emailaddress == ""))
            {

                // To Enable Submit Button
                $("#submit").removeAttr('disabled');
                $("#submit").css({
                    "cursor": "pointer",
                    "box-shadow": "1px 0px 6px #333"
                });

            }
        });
        // On Click Of Submit Button
        $("#submit").click(function () {
            $("#submit").css({
                "cursor": "default",
                "box-shadow": "none"
            });

        });
    });

</script>