@model CarWash.Web.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}




<div class="container mt-5">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Change Password your account</h1>
                        </div>
                    </div>
                    <form class="form-horizontal" method="post" action="/account/change-password">

                        <div class="form-group">
                            <label for="oldPassword" class="cols-sm-2 control-label">Old Password </label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                    <input type="text" class="form-control" name="OldPassword" id="EmailAddress" placeholder="Enter your Old Password" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="newPassword" class="cols-sm-2 control-label">New Password </label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                    <input type="text" class="form-control" name="NewPassword" id="NewPassword" placeholder="Enter your New Password" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="confirmNewPassword" class="cols-sm-2 control-label">Confirm Password </label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                    <input type="text" class="form-control" name="ConfirmNewPassword" id="ConfirmNewPassword" placeholder="Enter your Confirm New Password" />
                                </div>
                            </div>
                        </div>


                        <div class="form-group ">
                            <button type="submit" value="ChangePassword" class="btn btn-primary btn-lg btn-block login-button">Submit</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

