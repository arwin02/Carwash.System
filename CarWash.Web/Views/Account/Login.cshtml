@model CarWash.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<br /><br /><br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Login</h1>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger text-center"></div>
                 
                    <form action="/account/login" method="post" name="login">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" name="EmailAddress" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Password</label>
                            <input type="password" name="Password" id="password" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password">
                        </div>
                        <div class="form-group">
                            <p class=""><a href="~/account/forgot-password">I forgot a password?</a></p>
                        </div>
                        <div class="form-group">
                            <p class="text-center">By signing up you accept our <a href="#">Terms Of Use</a></p>
                        </div>
                        <div class="form-group row">
                            <div class="g-recaptcha" data-sitekey="6LdcU9QaAAAAAGd0QQ0xeny98ZoMi-EqacEuIm3j"></div>
                        </div>
                        <div class="col-md-12 text-center ">
                            <button type="submit" id="submit" value="Login" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
                        </div>
                        <div class="col-md-12 ">
                            <div class="login-or">
                                <hr class="hr-or">
                                <span class="span-or">or</span>
                            </div>
                        </div>
                        @*<div class="col-md-12 mb-3">
            <p class="text-center">
                <a href="javascript:void();" class="google btn mybtn">
                    <i class="fa fa-google-plus">
                    </i> Signup using Google
                </a>
            </p>
        </div>*@
                        <div class="form-group">
                            <p class="text-center">Don't have account? <a href="~/account/register" id="signup">Sign up here</a></p>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>


<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#submit").attr('disabled', 'disabled');

        $("form").keyup(function () {
            // To Disable Submit Button
            $("#submit").attr('disabled', 'disabled');
            // Validating Fields
            var emailAddress = $("#email").val();
            var password = $("#password").val();


            if (!(emailAddress == "" || password == "")) {

                // To Enable Submit Button
                $("#submit").removeAttr('disabled');
                $("#submit").css({
                    "cursor": "pointer",
                    "box-shadow": "1px 0px 6px #333"
                });

            }
        });
        // On Click Of Submit Button
        $("#submit").click(function () {
            $("#submit").css({
                "cursor": "default",
                "box-shadow": "none"
            });

        });
    });

</script>