@model CarWash.Web.ViewModels.account.ProfileViewModel
@using CarWash.Web.Infrastructures.Domain.Helpers
@{
    ViewData["Title"] = "Profile";
}

<br /><br /><br />
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>Profile</h1></div>
          </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">

                @{
                   
                    @if (Model.MaskUser == false)
                    {
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    }
                    else
                    {
                        <img src="~/images/users/@Model.Id/thumbnail.png" class="avatar img-circle img-thumbnail" alt="avatar">

                    }
                }



            </div></hr><br>

            @*<div class="panel panel-default">
            <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
            <div class="panel-body"><a href="http://bootnipets.com">bootnipets.com</a></div>
        </div>


        <ul class="list-group">
            <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Shares</strong></span> 125</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
        </ul>*@

           

        </div><!--/col-3-->
        <div class="col-sm-9">
            @*<ul class="list-inline">
                <li><a href="~/account/update-profile/@WebUser.UserId">Update-Profile</a></li>
            </ul>*@

            <ul class="nav nav-tabs">
                <li class="active"><a  href="~/account/update-profile/@Model.Id">Update Profile</a></li> |
                <li><a class="" href="~/account/update-thumbnail/@Model.Id">Thumbnail</a></li>
            </ul>
            
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <dl class="row">
                        <dt class="col-sm-2">
                            First-Name
                        </dt>
                        <dd class="col-sm-10">
                            @Model.FirstName
                        </dd>
                        <dt class="col-sm-2">
                            LastName
                        </dt>
                        <dd class="col-sm-10">
                            @Model.LastName
                        </dd>
                        <dt class="col-sm-2">
                            UserName
                        </dt>
                        <dd class="col-sm-10">
                            @Model.UserName
                        </dd>
                        <dt class="col-sm-2">
                            PhoneNumber
                        </dt>
                        <dd class="col-sm-10">
                            @Model.PhoneNumber
                        </dd>
                        <dt class="col-sm-2">
                            Gender
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Gender
                        </dd>
                        <dt class="col-sm-2">
                            Email
                        </dt>
                        <dd class="col-sm-10">
                            @Model.EmailAddress
                        </dd>
                    </dl>
                <hr />
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <button class="nav-link active" id="nav-mybook-tab" data-bs-toggle="tab" data-bs-target="#nav-mybook" type="button" role="tab" aria-controls="nav-mybook" aria-selected="true">My Book</button>
                                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</button>
                                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Contact</button>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-mybook" role="tabpanel" aria-labelledby="nav-mybook-tab">
                                <table class="table table-striped table-sm container">
                                    <thead>
                                        <tr>
                                            <th>Vehicle</th>
                                            <th>Price</th>
                                            <th>Address</th>
                                            <th>Status</th>
                                            <th>Feedback</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model.Items)
                                            {
                                                <tr>
                                                    <td>@item.Title</td>
                                                    <td>@item.Price.ToString("F")</td>
                                                    <td>@item.BookingAddress</td>
                                                    <td>@item.BookingStatus</td>
                                                    <td>
                                                        @if (item.BookingStatus == CarWash.Web.Infrastructures.Domain.Enums.BookingStatus.Complete || item.BookingStatus == CarWash.Web.Infrastructures.Domain.Enums.BookingStatus.Confirm)
                                                        {
                                                            <a href="~/booking/book/@item.ServiceId"><i class="fas fa-comments"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <p class="w-50">disabled</p>
                                                              
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
                            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
                        </div>
                </div><!--/tab-pane-->



            </div><!--/tab-pane-->
        </div><!--/tab-content-->
    </div><!--/col-9-->
</div><!--/row-->

<script>
    var popover = new bootstrap.Popover(document.querySelector('.example-popover'), {
        container: 'body'
    })
</script>