@model CarWash.Web.ViewModels.services.DetailViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="mt-5">
    <h1 class="text-center">Details</h1>
</div>
<div>
    <h4>Services</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Service.Vehicle
        </dd>
        <dt class="col-sm-2">
           Description
        </dt>
        <dd class="col-sm-10">
            @Model.Service.Description
        </dd>
        <dt class="col-sm-2">
          Type
        </dt>
        <dd class="col-sm-10">
           @Model.Service.ServiceType
        </dd>
        <dt class="col-sm-2">
          Price
        </dt>
        <dd class="col-sm-10">
           @Model.Service.Price
        </dd>
    </dl>
</div>
<div>
    <a href="~/services/index" class="btn btn-danger">Back</a>
</div>