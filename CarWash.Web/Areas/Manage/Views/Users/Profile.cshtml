@model CarWash.Web.Areas.Manage.ViewModels.users.ProfileViewModel
@{
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}

<h2>Profile</h2>


<br /><br /><br />
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>Profile</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            <div class="text-center">

                @{

                    @if (Model.User.MaskUser == false)
                    {
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    }
                    else
                    {
                        <img src="~/images/admins/@Model.User.Id/thumbnail.png" class="avatar img-circle img-thumbnail" alt="avatar">

                    }
                }



            </div></hr><br>

            @*<div class="panel panel-default">
                    <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
                    <div class="panel-body"><a href="http://bootnipets.com">bootnipets.com</a></div>
                </div>


                <ul class="list-group">
                    <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Shares</strong></span> 125</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
                </ul>*@



        </div><!--/col-3-->
        <div class="col-sm-9">
            @*<ul class="list-inline">
                    <li><a href="~/account/update-profile/@WebUser.UserId">Update-Profile</a></li>
                </ul>*@

            <ul class="nav nav-tabs">
                <li class="active"><a href="~/manage/users/update-profile/@Model.User.Id">Update Profile</a></li> |
                <li><a class="" href="~/manage/users/update-thumbnail/@Model.User.Id">Thumbnail</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <dl class="row">
                        <dt class="col-sm-2">
                            First-Name
                        </dt>
                        <dd class="col-sm-10">
                            @Model.User.FirstName
                        </dd>
                        <dt class="col-sm-2">
                            LastName
                        </dt>
                        <dd class="col-sm-10">
                            @Model.User.LastName
                        </dd>
                        <dt class="col-sm-2">
                            UserName
                        </dt>
                        <dd class="col-sm-10">
                            @Model.User.UserName
                        </dd>
                        <dt class="col-sm-2">
                            PhoneNumber
                        </dt>
                        <dd class="col-sm-10">
                            @Model.User.PhoneNumber
                        </dd>
                        <dt class="col-sm-2">
                            Gender
                        </dt>
                        <dd class="col-sm-10">
                            @Model.User.Gender
                        </dd>
                        <dt class="col-sm-2">
                            Email
                        </dt>
                        <dd class="col-sm-10">
                            @Model.User.EmailAddress
                        </dd>
                    </dl>
                    <hr />
                  
                </div><!--/tab-pane-->



            </div><!--/tab-pane-->
        </div><!--/tab-content-->
    </div><!--/col-9-->
</div><!--/row-->

<script>
    var popover = new bootstrap.Popover(document.querySelector('.example-popover'), {
        container: 'body'
    })
</script>