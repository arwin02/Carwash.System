@model CarWash.Web.Areas.Manage.ViewModels.users.ThumbnailViewModel
@using CarWash.Web.Infrastructures.Domain.Helpers
@{
    Layout = "~/areas/manage/views/shared/_forms.cshtml";
}


<br /><br />
<div class="mt-5">
    <h2>Thumbnail</h2>
</div>
<h3 class="text-warning">Image size is 2mb only</h3>
<a class="btn btn-primary" href="~/manage/users/profile/@WebID.GetAdminUserId">Profile</a>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/users/update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                <img src="~/images/admins/@Model.UserId/thumbnail.png" style="max-width:150px;max-height:150px;" /></br></br>
                <input type="file" class="form-control" name="Thumbnail" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>
